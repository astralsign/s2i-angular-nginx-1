#!/bin/sh -e

# Paths based on https://docs.openshift.org/latest/creating_images/s2i.html#s2i-scripts

pushd /tmp/s2i/src

if [ "$(ls /tmp/s2i/artifacts/ 2>/dev/null)" ]; then
    echo "---> Restoring build artifacts (node_modules)"
    mv /tmp/s2i/artifacts/* .
fi

echo "---> Installing NPM Dependencies (with dev)"
npm install
npm install --only=dev

echo "---> Building Angular CLI Application"
./node_modules/@angular/cli/bin/ng build --prod

popd

echo "---> Installing application to web container"
cp -Rf /tmp/s2i/src/dist/. ./

# echo "---> Removing application source"
# rm -rf /tmp/s2i/src

# Fix source directory permissions
fix-permissions ./
